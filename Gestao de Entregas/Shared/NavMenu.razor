<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Gestão de Entregas</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon">Nav</span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Início
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="entregas">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Entregas
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="coletas">
                <span class="oi oi-calendar" aria-hidden="true"></span> Coletas
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="faltas">
                <span class="oi oi-bug" aria-hidden="true"></span> Faltas
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="administrador">
                <span class="oi oi-key" aria-hidden="true"></span> Administrador
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}